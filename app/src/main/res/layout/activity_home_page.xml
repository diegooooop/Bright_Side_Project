<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".HomePageActivity">

    <LinearLayout
        android:id="@+id/ll_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_settingsBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/greetingTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_light"
                android:text="Good Morning"
                android:textSize="34sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/settingsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFF"
                    android:clickable="true"
                    android:contentDescription="Settings Button"
                    android:focusable="true"
                    android:src="@drawable/ic_settings" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_notification" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diego"
            android:textSize="48sp"
            android:textStyle="italic|bold" />

        <ImageView
            android:id="@+id/affirmationIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/affirmation1" />

        <Button
            android:id="@+id/moodBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#edbb6a"
            android:padding="15dp"
            android:text="Log your mood"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="@android:dimen/app_icon_size" />

        <Button
            android:id="@+id/weekBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#C3B1E1"
            android:textColor="#000000"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="Your week so far"
            android:textAlignment="center"
            app:cornerRadius="@android:dimen/app_icon_size"/>

        <Button
            android:id="@+id/logsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#9fadd8"
            android:textColor="#000000"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="See all my logs"
            android:textAlignment="center"
            app:cornerRadius="@android:dimen/app_icon_size"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>